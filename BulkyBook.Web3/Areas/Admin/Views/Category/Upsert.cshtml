@model Category
@{
    @if(@Model.Id == 0){
        ViewData["Title"] = "Create Category";
    }else{
        ViewData["Title"] = "Update Category";
    }
}

<div class="container mb-5">
    <div class="card shadow">
        <div class="card-header p-3 bg-primary">
            <div class="d-flex align-items-center">
                <div class="">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-light"><i class="bi bi-arrow-left"></i></a>
                </div>
                <div class="w-100">
                    <p class="h2 text-center text-light">@(Model.Id != 0 ? "Update" : "Create") a category</p>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form method="post">
                <div class="form-floating card shadow mb-3">
                    <input asp-for="Name" class="form-control" />
                    <label asp-for="Name" class="form-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating card shadow mb-3">
                    <input asp-for="DisplayOrder" class="form-control" />
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        @if (@Model.Id != 0)
                        {
                            <button class="btn btn-primary w-100">Update</button>
                        }
                        else
                        {
                            <button class="btn btn-primary w-100">Create</button>
                        }
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark w-100">Back to category list</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}