@model List<Product>
@{
    ViewData["Title"] = "Product";
}

<div class="container mb-5">
    <div class="card shadow">
        <div class="card-header p-3 bg-primary mb-3">
            <p class="h2 text-center text-light">Product List</p>
        </div>
        <div class="card-body p-3">
        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary p-2 align-items-center">
                <i class="bi bi-plus-circle" style="font-size:13.5px"></i> Create a product
            </a>
        </div>
        <table id="productDataTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>ISBN</td>
                    <td>Author</td>
                    <td>Price</td>
                    <td>Category</td>
                    <td>Actions</td>
                </tr>
            </thead>
        </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}