@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>
@* @model ShoppingCart *@

<div class="container mb-5">
    <div class="row pb-3">
        @foreach (var productList in @Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 border-top border-5 shadow rounded">
                            <img src="@productList.ImageUrl" alt="product image" class="card-img-top rounded" />
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@productList.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@productList.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="mb-0 text-dark text-opacity-75 text-center">List Price: <span class="text-decoration-line-through">@productList.ListPrice.ToString("c")</span></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">As low as: <span>@productList.Price100.ToString("c")</span></p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-productId="@productList.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>